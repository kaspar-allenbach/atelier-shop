  ],
  "dependencies": {
    "gugus-media-queries": "^1.1.1",
    "lazysizes": "^4.0.1",
    "lightgallery": "^1.6.12",
    "mapbox-gl": "^1.1.1",
    "mhead-js": "^2.0.0",
    "mmenu-js": "^8.4.5",
    "normalize.css": "^8.0.0",
    "parsleyjs": "^2.9.2",
    "respimage": "^1.4.2",
    "sass": "^1.34.1",
    "waypoints": "^4.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "compression-webpack-plugin": "^1.1.7",
    "cssnano": "^4.1.10",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.25",
    "postcss-cli": "^6.1.3",
    "watch": "^1.0.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "clean": "rm -r node_modules/",
    "build:js": "webpack --config webpack/webpack.prod.config.js",
    "build:dev:js": "webpack --config webpack/webpack.devbuild.config.js",
    "build:css": "run-s prebuild:css prefix:css",
    "build:dev:css": "node-sass --source-map true theme_src/scss/atelier6.scss www/theme/css/atelier6.dev.css",
    "prebuild:css": "node-sass --source-map true theme_src/scss/atelier6.scss www/theme/css/atelier6.prebuild.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 3 versions' --grid true  < www/theme/css/atelier6.prebuild.css | postcss --use cssnano --output www/theme/css/atelier6.min.css",
    "watch:js": "webpack --config webpack/webpack.dev.config.js",
    "watch:css": "watch 'npm run build:dev:css' theme_src/scss",
    "dev": "run-p watch:css watch:js",
    "build": "run-p build:css build:js",
    "build:dev": "run-p build:dev:css build:dev:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/kaspar-allenbach/atelier6.git"
  }
}

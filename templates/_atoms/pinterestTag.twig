<script>
    {% if product is defined %}
        pintrk('track', 'pagevisit', {
            line_items: [
                {% for item in product.variants %}
                    {
                        product_name: '{{ item.title }}',
                        product_id: '{{ item.sku }}',
					    product_group_id: '{{ product.title | ascii | kebab }}'
                    }{% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        });
    {% else %}
        pintrk('track', 'pagevisit');
    {% endif %}
</script>
<noscript>
    <img height="1" width="1" style="display:none;" alt="" src="https://ct.pinterest.com/v3/?tid=2614432994686&event=pagevisit&noscript=1" />
